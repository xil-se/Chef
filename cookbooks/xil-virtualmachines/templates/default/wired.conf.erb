[Match]
Name=host*

[Network]
<% if (defined? @ipv4 && defined? ipv6) -%>
DHCP=yes
<% end %>



<% if ! defined? @ipv4 %>
<% @ipv4["addresses"].each do |k| %>
Address=<%= k %>
<% end %>
Gateway=<%= @ipv4["gateway"] %>
<% end %>

<% if ! defined? @ipv6 %>
<% @ipv6["addresses"].each do |k| %>
Address=<%= k %>
<% end %>
Gateway=<%= @ipv6["gateway"] %>
<% end %>
