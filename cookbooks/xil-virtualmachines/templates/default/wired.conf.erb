[Match]
Name=host*

[Network]
<% if (@ipv4.nil? && ipv6.nil?) -%>
DHCP=yes
<% end %>



<% if ! @ipv4.nil? %>
<% @ipv4["addresses"].each do |k| %>
Address=<%= k %>
<% end %>
Gateway=<%= @ipv4["gateway"] %>
<% end %>

<% if ! @ipv6.nil? %>
<% @ipv6["addresses"].each do |k| %>
Address=<%= k %>
<% end %>
Gateway=<%= @ipv6["gateway"] %>
<% end %>
